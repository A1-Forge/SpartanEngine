	color: #909090;
	background-color: #292929;
	font: 9pt "Calibri";
	padding: 0px;
}

QWidget
{
	color: #909090;
	background-color: #292929;
	border-color: #212121;
	border-style: none;
	border-width: 1px;
	font: 9pt "Calibri";
	padding: 0px;
}

QLineEdit
{
	color: #909090;
	background-color: #484848;
	border-style: inset;
}

QLabel
{
	color: #909090;
	background-color: #383838;
	border-style: none;
}

QCheckBox
{
	color: #909090;
	background-color: #383838;
	border-style: none;
}

/*= PLAY/PAUSE BUTTONS ===================================================================================*/
#directusPlayButton
{
	min-width: 2em;
	padding: 3px;
	border-color: #464646;
	background-color: qlineargradient(spread:pad, x1:0.460636, y1:0, x2:0.467, y2:1, stop:0 rgba(120, 120, 120, 255), stop:1 rgba(79, 79, 79, 255));
	background-image: url(:/Images/play.png);
	background-repeat: no-repeat;
	background-position: center;
	border-style: outset;
	border-width: 1px;
	border-top-left-radius: 5px;
	border-bottom-left-radius: 5px;
}

#directusPlayButton:checked 
{
	min-width: 2em;
	padding: 3px;
	border-color: #464646;
	background-color: qradialgradient(spread:pad, cx:0.495, cy:0.5, radius:0.644, fx:0.5, fy:0.5, stop:0.204545 rgba(120, 120, 120, 255), stop:1 rgba(59, 59, 59, 255));
	background-image: url(:/Images/play.png);
	background-repeat: no-repeat;
	background-position: center;
	border-style: outset;
	border-width: 1px;
	border-top-left-radius: 5px;
	border-bottom-left-radius: 5px;
}

#directusPauseButton
{
	min-width: 2em;
	padding: 3px;
	border-color: #464646;
	background-color: qlineargradient(spread:pad, x1:0.460636, y1:0, x2:0.467, y2:1, stop:0 rgba(120, 120, 120, 255), stop:1 rgba(79, 79, 79, 255));
	background-image: url(:/Images/pause.png) contain;
	background-repeat: no-repeat;
	background-position: center;
	border-style: outset;
	border-width: 1px;
	border-top-right-radius: 5px;
	border-bottom-right-radius: 5px;
}

#directusPauseButton:checked 
{
	min-width: 2em;
	padding: 3px;
	border-color: #464646;
	background-color: qradialgradient(spread:pad, cx:0.495, cy:0.5, radius:0.644, fx:0.5, fy:0.5, stop:0.204545 rgba(120, 120, 120, 255), stop:1 rgba(59, 59, 59, 255));
	background-image: url(:/Images/pause.png);
	background-repeat: no-repeat;
	background-position: center;
	border-style: outset;
	border-width: 1px;
	border-top-right-radius: 5px;
	border-bottom-right-radius: 5px;
}
/*= MENU ===================================================================================*/
QMenuBar
{
	color: #B4B4B4;
	background-color: #383838;
	padding: 0px;
}

QMenuBar::item
{
	color: #909090;
	background-color: #383838;
}

QMenuBar::item:selected
{
	color:  #EDEDED;
	background-color:#484848;
}

QMenuBar::item:pressed 
{
    color:  #909090;
	background-color:#484848;
}

QMenu::item
{
	color: #909090;
	background-color: #383838;
}

QMenu::item:!enabled
{
	color: #585858;
	background-color: #383838;
}

QMenu::item:selected:enabled
{
	color:  #EDEDED;
	background-color:#484848;
}

v::item:pressed 
{
    color:  #909090;
	background-color:#484848;
}

QMenu::separator 
{
	height: 1px;
	background:#292929;
}

