/*= COMBOBOX ==================================================================================*/
QComboBox
{
    background-color: qlineargradient(spread:pad, x1:0.5, y1:1, x2:0.5, y2:0, stop:0 rgba(57, 57, 57, 255), stop:1 rgba(68, 68, 68, 255));
	border-radius: 5px;
    border-color: #464646;
    border-width: 1px;
    border-style: solid;
	padding-left: 5px;
}

QComboBox::drop-down
{
    background-color: qlineargradient(spread:pad, x1:0.5, y1:1, x2:0.5, y2:0, stop:0 rgba(57, 57, 57, 255), stop:1 rgba(68, 68, 68, 255));
    border-width: 1px;
    border-style: none;
}

QComboBox::down-arrow
{   
    background-image: url(:/Images/arrow.png);
	background-repeat: no-repeat;
	background-position: center;
}
/*===========================================================================================*/

/*= SLIDER =====================================================================================*/
QSlider
{
	background-color: #383838;
}

QSlider::groove:horizontal 
{
	border: 1px;
	border-color: #212121;
	border-style: inset;
	background: qlineargradient(spread:pad, x1:0.5, y1:1, x2:0.488318, y2:0.358, stop:0 rgba(192, 192, 192, 255), stop:1 rgba(79, 79, 79, 255));
	height: 5px;
	border-radius: 4px;
}

QSlider::handle:horizontal 
{
	background: qlineargradient(spread:pad, x1:0.5, y1:0, x2:0.5, y2:1, stop:0 rgba(110, 110, 110, 255), stop:1 rgba(68, 68, 68, 255));
	border: 1px;
	border-color: #212121;
	border-style: outset;
	width: 10px;
	height: 10px;
	margin-top: -3px;
	margin-bottom: -3px;
	border-radius: 5px;
}
/*========================================================================================*/

/*= TABS ===================================================================================*/
QTabWidget
{
	border-color: #212121;
	border-style: solid;
}

 /* The tab widget frame */
QTabWidget::pane
{  

}

QTabBar::tab
{	
	background-repeat: no-repeat;
	background-position: left;

	border-color: #464646;
	border-style: solid;
	border-top-left-radius: 3px;
	border-top-right-radius: 3px;
	border-bottom-width: 0px;

	min-width: 3.5em;
	min-height: 1.3em;

	padding-top: 0px;
	padding-bottom: 0px;
	padding-left: 18px;
	padding-right: 10px;
}

QTabBar::tab:selected
{
	background-color: #484848;	
}
